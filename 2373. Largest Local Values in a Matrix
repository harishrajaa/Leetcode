class Solution {
    public int[][] largestLocal(int[][] grid) {
        int n = grid.length;
        int[][] maxval = new int[n-2][n-2];

        for(int i=0; i<n-2; i++)
        {
            for(int j=0; j<n-2; j++)
            {
                maxval[i][j] = largelocalval(grid,i,j);
            }
        }
        return maxval;
    }
    public int largelocalval(int[][] arr, int istart, int jstart)
    {
        int val = Integer.MIN_VALUE;

        for(int i= istart; i<istart+3; i++)
        {
            for(int j=jstart; j<jstart+3; j++)
            {
                val = Math.max(val, arr[i][j]);
            }
        }
        return val;
    
    }
}
